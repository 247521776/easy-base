{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "target": "ES2017",
        "types": [
            "reflect-metadata",
            "mocha"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node"
    },
    "exclude": ["node_modules", "dist"],
    "include": ["./src/**/*.ts"]
}